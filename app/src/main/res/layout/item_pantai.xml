<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pantai_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/pantai_name"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/pantai_photo"
        android:text="@string/nama_pantai"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pantai_details"
        android:layout_width="102dp"
        android:layout_height="22dp"
        android:layout_below="@+id/pantai_name"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/pantai_photo"
        android:text="Detail Pantai" />

</RelativeLayout>